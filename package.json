{
	"name": "favorites",
	"displayName": "Favorites",
	"description": "Manage and quickly access frequently used documents",
	"version": "1.0.1",
	"publisher": "oleg-shilo",
	"engines": {
		"vscode": "^1.13.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"Favorites"
    ],
    "bugs": {
        "url": "https://github.com/oleg-shilo/Favorites.vscode/issues",
        "email": "oshilo@gmail.com"
    },
    "homepage": "https://github.com/oleg-shilo/Favorites.vscode/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/oleg-shilo/Favorites.vscode.git"
    },
	"activationEvents": [
		"onView:favorites"
	],
	"main": "./out/src/extension",
	"icon": "media/fav.png",
	"contributes": {
		"views": {
			"explorer": [
				{
					"id": "favorites",
					"name": "Favorites"
				}
			]
		},
		"commands": [
			{
				"command": "favorites.add",
				"title": "Add active document to Favorites",
				"icon": {
					"light": "resources/light/add.svg",
					"dark": "resources/dark/add.svg"
				}
			},
			{
				"command": "favorites.remove",
				"title": "Remove selected document"
			},
			{
				"command": "favorites.refresh",
				"title": "Reload Favorites",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "favorites.edit",
				"title": "Manage Favorites",
				"icon": {
					"light": "resources/light/folder.svg",
					"dark": "resources/dark/folder.svg"
				}
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "favorites.add",
					"when": "view == favorites",
					"group": "navigation@1"
				},
				{
					"command": "favorites.refresh",
					"when": "view == favorites",
					"group": "navigation@2"
				},
				{
					"command": "favorites.edit",
					"when": "view == favorites",
					"group": "navigation@3"
				}
			],
			"view/item/context": [
				{
					"command": "favorites.remove",
					"when": "view == favorites && viewItem == file"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"devDependencies": {
		"typescript": "^2.1.4",
		"vscode": "^1.0.0",
		"@types/node": "*"
	},
	"dependencies": {
		"mkdirp": "^0.5.1",
        "vscode": "^1.0.0"
	}
}